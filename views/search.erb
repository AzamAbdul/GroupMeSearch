</header>

<body>
	<h1> Group Me Search </h1>
	<div class="container">

		<div id ="search_form"class="groups">
			<h2> Select group to search </h2>
			<% @group_num=1 %> 
			<% @groups["response"].each do |group| %>
			<% if (@group_num-1)%3 == 0 %>

			<div class="row group_row"> 
				<% end %>
				<div class="col-md-4 group" onclick=<%="test(this,\'r#{@group_num.to_s}\')"%>>
					<input type="radio" name="group_selected" value=<%= group["id"]%> id=<%= "r"+@group_num.to_s %> >
					<label for=<%= "r"+@group_num.to_s %>></label>
					<div class="col-md-2 ">
						<% if group["image_url"]==nil %>
						<img src="no_image.png"   width="75" height="75"> 
						<% else %>
						<img src=<%= group["image_url"] %>  width="75" height="75"> 
						<% end %>

					</div>
					<div class="col col-md-8 bottom-text"> 
						<p> <%= group["name"] %></p>
					</div>

				</div>
				
				<% if @group_num%3 == 0 %>
			</div>	
			
			<% end %>
			<% @group_num+=1 %>
			<%end %>

			
		</div>
		<div class="row banner">
			<div class="col-md-12">
				
			</div> 
		</div>
		<div id="custom-search-input">
			<div class="input-group col-md-12">
				<input id="search_bar" type="text" class="form-control input-lg" placeholder="Please enter message here" />
				<span class="input-group-btn">
					<button id="search_btn" class="btn btn-info btn-lg" type="button">
						<i class="glyphicon glyphicon-search"></i>
					</button>
				</span>
			</div>
		</div>
		<div class="row"> 
			<div id="error" class="col-md-10 col-md-offset-1 err">

				
			</div>
		</div>
		<input id="token" type="hidden" name="token" value=<%= @token %>>
		
	</div>
